        <item name="sb_component_header">@style/Component.Custom.Header.OpenChannel</item>
        <item name="sb_component_list">@style/Component.Custom.List.OpenChannel</item>
        <item name="sb_component_open_channel_message_input">@style/Component.Custom.OpenChannelMessageInput</item>
        <item name="sb_component_status">@style/Component.Custom.Status.OpenChannel</item>
